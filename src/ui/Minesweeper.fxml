    <Button fx:id="btnReset" layoutY="17.0" mnemonicParsing="false" onAction="#btnRestart" prefHeight="69.0" prefWidth="111.0" text="Restart" />

    <Label fx:id="lblWidth" alignment="CENTER" layoutY="14.0" prefHeight="30.0" prefWidth="87.0" text="Width" underline="true">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
    <TextField fx:id="txtTileWidth" layoutY="44.0" prefHeight="44.0" prefWidth="87.0" text="10">
        <font>
            <Font size="20.0" />
        </font>
    </TextField>

    <Label fx:id="lblHeight" alignment="CENTER" layoutY="14.0" prefHeight="30.0" prefWidth="87.0" text="Height" underline="true">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
    <TextField fx:id="txtTileHeight" layoutY="44.0" prefHeight="44.0" prefWidth="87.0" text="10">
        <font>
            <Font size="20.0" />
        </font>
    </TextField>

    <Label fx:id="lblNumMines" alignment="CENTER" layoutY="14.0" prefHeight="30.0" prefWidth="111.0" text="# of Mines" underline="true">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
    <TextField fx:id="txtNumMines" layoutY="44.0" prefHeight="44.0" prefWidth="111.0" text="10">
        <font>
            <Font size="20.0" />
        </font>
    </TextField>

    <GridPane fx:id="gridPane" alignment="CENTER" gridLinesVisible="false" layoutX="20.0" layoutY="96.0" />

</AnchorPane>
